@page
@model Bookstore.Pages.CartModel
@{
}

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <td>Book Name</td>
            <td>Category</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Subtotal</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var book in Model.cart.BooksToBuy)
            {
                <tr>
                    <td>@book.Book.Title</td>
                    <td>@book.Book.Category</td>
                    <td>@book.Book.Price.ToString("c")</td>
                    <td>@book.Quantity</td>
                    <td>@((book.Quantity * book.Book.Price).ToString("c"))</td>
                    <td>
                        <form method="post" asp-page-handler="Remove">
                            <input type="hidden" name="BookId" value="@book.Book.BookId" />
                            <input type="hidden" name="url" value="@Model.returnURL" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            } 
    </tbody>

    <tfoot>
        <tr>
            <td colspan="4">Total</td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary mr-3" href="@Model.returnURL">Continue Shopping</a>
    <a class="btn btn-success" asp-action="Checkout" asp-controller="Checkout">Proceed to Checkout</a>
</div>

    