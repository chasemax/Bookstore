@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<div class="container">
    <div class="row">
        <div class="col-12 text-center my-3">
            <div class="jumbotron">
                <h1 class="display-1">The Hook's Books!</h1>
                <p class="lead">Find the books of your dreamland!</p>
            </div>
        </div>
    </div>
    <div class="row">
       <div class="col-3">
           <vc:category></vc:category>
       </div>
       <div class="col-9">
           <div class="row">
               <div class="col-12 text-left my-2">
                   <div page-info="@Model.PageInfo" page-action="Index"></div>
               </div>
           </div>
           <div class="row">
               @foreach (var book in Model.BooksToDisplay)
               {
               <partial name="BookCard" model="book" />
               }
           </div>
       </div>
    </div>
</div>